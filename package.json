{
  "name": "ClashFox",
  "version": "0.3.7",
  "buildNumber": 7,
  "description": "ClashFox GUI for Mihomo",
  "author": "Kuochiang Lu <lukuochiang@gmail.com> (https://github.com/lukuochiang/ClashFox)",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "node scripts/bump-version.js && CLASHFOX_DEV=1 electron .",
    "build:mac": "node scripts/clean-dist-mac.js --pre; CLASHFOX_BUILD_NUMBER=$(node -p \"require('./package.json').buildNumber\") electron-builder --mac; code=$?; node scripts/clean-dist-mac.js; exit $code",
    "clean:mac": "node scripts/clean-dist-mac.js"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-reload": "^1.5.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.clashfox.gui",
    "productName": "ClashFox",
    "files": [
      "src/**/*",
      "scripts/**/*",
      "assets/**/*",
      "static/**/*",
      "package.json",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.DS_Store"
    ],
    "asarUnpack": [
      "scripts/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/ui/assets/logo.icns",
      "artifactName": "${productName}-${version}(${env.CLASHFOX_BUILD_NUMBER})-mac-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ]
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 160,
          "y": 160
        },
        {
          "x": 380,
          "y": 160,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "ClashFox Installer"
    }
  }
}
