{
  "name": "clashfox-gui",
  "version": "0.3.5",
  "description": "ClashFox Mihomo Toolkit GUI",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "node scripts/bump-version.js && CLASHFOX_DEV=1 electron .",
    "build:mac": "electron-builder --mac && node scripts/clean-dist-mac.js",
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-reload": "^1.5.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.clashfox.gui",
    "productName": "ClashFox",
    "files": [
      "src/**/*",
      "scripts/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/logo.icns",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ]
    }
  },
  "buildNumber": 2
}
